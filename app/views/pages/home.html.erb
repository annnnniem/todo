<div class="container">
	<% if @tasks.empty? %>
		<span class="text-warning">There are no tasks!</span>
	<% else %>
		<table class="table table-hover">
			<tr>
				<th>ToDo</th>
				<th>Created at</th>
				<th>Completed at</th>
			</tr>
			<% @tasks.each do |task| %>
				<tr>
					<td>
						<strong><%= task.title %></strong>
					</td>
					<td class="text-info">
						<%= task.created_at %>
					</td>
					<td class="text-success">
						<%= task.completed %>
					</td>
				</tr>
			<% end %>
		</table>
	<% end %>
</div>
<div id="modal" class="modal fade"></div>